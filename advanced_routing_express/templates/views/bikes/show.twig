{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2> About {{ product.title }} </h2>
    <ul>
        <li style="list-style: none;" >
            <label>Id: </label> {{ product.id }}
        </li>
        <li style="list-style: none;" >
            <label>Bike: </label> {{ product.title }}
        </li>
        <li style="list-style: none;" >
            <label>Price: </label> {{ product.price }}
        </li>
        <li style="list-style: none;" >
            <label>Description: </label> {{ product.description }}
        </li>
        <li style="list-style: none;" >
            <label>Status: </label> {{ product.is_published }}
        </li>
    </ul>
    <p>
        <a href="/products/{{ product.id }}/edit">Edit</a> | <a href="/products/{{ product.id }}/delete">Delete</a>
    </p>
{% endblock %}