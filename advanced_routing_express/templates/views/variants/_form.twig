<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %} ">
    {% if variant.id %}
        <input type="hidden" name="id" value="{{ variant.id}}">
    {% endif %}
    <div>
        <label for="title">Name:</label>
        <input type="text" name="title" id="title" value="{{ variant.title }}" />
    </div>
    <div>
        <label>Product</label>
        <select name="productId">
            {% for product in products %}
                <option value="{{ product.id }}"
                {% if product.id == variant.productId %}selected="selected"{% endif %}>
                
                {{ product.title }}
                
                </option>
            {% endfor %}

        </select>
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="text" name="price" id="price" value="{{ variant.price }}"/>
    </div>
    <div>
        <label for="description">Description:</label>
        <input type="text" name="description" id="description" value="{{ variant.description }}"/>
    </div>
    <div>
        <label for="iventory">Iventory:</label>
        <input type="text" name="inventory" id="inventory" value="{{ variant.inventory }}"/>
    </div>
    <div>
        <input type="submit" type="submit"" />
    </div>

</form>